{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "lib": ["node", "ESNext", "cli.ts"]
}
